{
    "name": "sanderdekroon/parlant",
    "type": "library",
    "description": "An expressive way to query posts in WordPress.",
    "keywords": [
        "sanderdekroon",
        "parlant",
        "wordpress",
        "querybuilder",
        "posts"
    ],
    "homepage": "https://github.com/sanderdekroon/parlant",
    "license": "MIT",
    "authors": [
        {
            "name": "Sander de Kroon",
            "email": "sander@dekroon.xyz",
            "homepage": "https://github.com/sanderdekroon",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Sanderdekroon\\Parlant\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sanderdekroon\\Parlant\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
